---
interface Props {
	element?: string;
	divider?: "single" | "double";
	class?: string;
}

const {
	element: Element = "nav",
	divider = "single",
	class: className,
} = Astro.props;
---

<Element
	class:list={[
		className,
		"row",
		{ divide: divider === "single", "double-divide": divider === "double" },
	]}
>
	<slot />
</Element>
