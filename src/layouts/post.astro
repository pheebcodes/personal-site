---
import Time from "../components/time.astro";
import Base from "../layouts/base.astro";

const { section, title, date, draft = false } = Astro.props;
---

<Base title={title} section={section} class="col container margin-gap grow">
	<header class="col">
		<h1>{title}</h1>
		<Time date={date} />
		{draft ? <i>(draft)</i> : null}
	</header>

	<section class="col margin-gap">
		<slot />
	</section>
</Base>
